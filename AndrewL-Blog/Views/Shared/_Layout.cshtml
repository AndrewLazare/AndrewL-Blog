@using Microsoft.AspNet.Identity
@using AndrewL_Blog.Models
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="icon" type="image/png" sizes="16x16" href="~/Images/Andrew Favicon[111].png" />

    <link href='//fonts.googleapis.com/css?family=Work+Sans:100,200,300,400,700,800' rel="stylesheet">
    <link href='//fonts.googleapis.com/css?family=Playfair+Display:400,400i,700,700i' rel="stylesheet">

    <link href="~/Content/css/open-iconic-bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/animate.css" rel="stylesheet" />
    <link href="~/Content/css/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Content/css/owl.theme.default.min.css" rel="stylesheet" />
    <link href="~/Content/css/magnific-popup.css" rel="stylesheet" />
    <link href="~/Content/css/aos.css" rel="stylesheet" />
    <link href="~/Content/css/ionicons.min.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-datepicker.css" rel="stylesheet" />
    <link href="~/Content/css/jquery.timepicker.css" rel="stylesheet" />
    <link href="~/Content/css/flaticon.css" rel="stylesheet" />
    <link href="~/Content/css/icomoon.css" rel="stylesheet" />

    <link href="~/Content/css/style.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")

    <style>
        .colorlib-nav-toggle {
            width: unset;
        }
    </style>

</head>
<body>
    @*NAV BAR*@
    <nav id="colorlib-main-nav" role="navigation">
        <a href="#" class="js-colorlib-nav-toggle colorlib-nav-toggle active"><i></i></a>
        <div class="js-fullheight colorlib-table">
            <div class="colorlib-table-cell js-fullheight">
                <div class="row d-flex justify-content-end">
                    <div class="col-md-12 colorlib-logo">
                        <ul class="mb-5">
                            <li><a href="@Url.Action("Index", "Home")" style="font-size: !important 100%"><span>Home</span></a></li>
                            <li><a href="@Url.Action("About", "Home")" style="font-size: !important 100%"><span>About</span></a></li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                @*<li><a href="@Url.Action("UserProfile", "Account")"><span>My Profile</span></a></li>*@
                                <li><a href="@Url.Action("Contact", "Home")"><span>Contact</span></a></li>
                            }
                            @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                            {
                                <li><a href="@Url.Action("Create", "BlogPosts")"><span>Create</span></a></li>
                                <li><a href="@Url.Action("Index", "BlogPosts")"><span>Manage Posts</span></a></li>
                            }

                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </nav>


    @*Left Side*@
    <div id="colorlib-page">
        <header>
            <div class="container-fluid">
                <div class="row no-gutters">
                    <div class="col-md-12">
                        <div class="colorlib-navbar-brand">
                            <div class="hamburger">
                                <a class="colorlib-logo" href="index.html">My Favorite Things</a>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                    {
                                        @Html.AntiForgeryToken();

                                        <div class="nav-item active">
                                            <a class="colorlib-logo logtog" href="javascript:document.getElementById('logoutForm').submit()">
                                                <p>Log Off</p>
                                            </a>
                                        </div>
                                    }
                                }

                                else
                                {
                                    <a class="colorlib-logo logtog" href="@Url.Action("Login", "Account")"><h10><span>Login</span></h10></a>
                                    <a class="colorlib-logo logtog" href="@Url.Action("Register", "Account")"><h10><span>Register</span></h10></a>
                                }
                            </div> <!--hamburger-->








                        </div>
                        <a href="#" class="js-colorlib-nav-toggle colorlib-nav-toggle"><i></i></a>
                    </div>
                </div>
            </div>
        </header>

        <section class="ftco-fixed clearfix">
            <div class="image js-fullheight float-left">
                <div class="home-slider owl-carousel js-fullheight">
                    <div class="slider-item js-fullheight" style="background-image: url(/Images/Facebook2.jpg)">
                        <div class="overlay"></div>
                        <div class="container">
                            <div class="row slider-text align-items-end" data-scrollax-parent="true">
                                <div class="col-md-10 col-sm-12 ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
                                    <h1 class="mb-3" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"></h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- end:image -->
            @*Right Side*@
            <div class="page-container float-right">


                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now
                </footer>

            </div>

            @*<p class="breadcrumbs"><span><a href="index.html">Home</a></span> <span>Blog</span></p>*@





        </section>
    </div>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.easing.1.3.js"></script>
    <script src="~/Scripts/jquery.waypoints.min.js"></script>
    <script src="~/Scripts/jquery.stellar.min.js"></script>
    <script src="~/Scripts/owl.carousel.min.js"></script>
    <script src="~/Scripts/jquery.magnific-popup.min.js"></script>
    <script src="~/Scripts/aos.js"></script>
    <script src="~/Scripts/jquery.animateNumber.min.js"></script>
    <script src="~/Scripts/scrollax.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src='//maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false'></script>
    <script src="~/Scripts/google-map.js"></script>
    <script src="~/Scripts/main.js"></script>

    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>



    @RenderSection("scripts", required: false)
    @*@Scripts.Render("~/bundles/jquery")*@
  
    
    @*TinyMce BlogPost*@
    <script>
        $(function () {

            tinymce.init({

                selector: '#BlogPostBody'
            });
        });
    </script>
    @*TinyMce Comment*@
    <script>
        $(function () {

            tinymce.init({

                selector: '#CommentBody'
            });
        });

    </script>
    @*TinyMce Contact*@
    <script>
        $(function () {

            tinymce.init({

                selector: '#Body'
            });
        });



    </script>


</body>
</html>


